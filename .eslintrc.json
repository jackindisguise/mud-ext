{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
		"prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
	"rules": {
		"comma-dangle": "off",
		"@typescript-eslint/comma-dangle": "error",
		"no-constant-condition": "warn",
		"no-control-regex": "off"
	}
}